<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script defer src="/app/script.js"></script>
    <link rel="stylesheet" href="/css/events/show.css" />
    <title>Show</title>
  </head>
  <body>
    <%- include('../partials/nav.ejs')%>
    <span id="event-id" class="hidden"><%= event._id %></span>
    <div class="event-info">
      <h2><%= event.name %></h2>
      <p>Course: <%= event.course %></p>
      <p>Date: <%= event.date %></p>
    </div>
    <form
      class="new-player"
      action="/events/<%= event._id %>/addplayer?_method=PUT"
      method="POST"
    >
      <label>Add Player to Event</label><br />
      <input type="text" name="name" placeholder="player name" />
      <input type="submit" value="Add" />
    </form>
    <table id="mytable">
      <thead>
        <tr>
          <th>Player</th>
          <th>Current Tag</th>
          <th>New Tag</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% event.players.forEach(p => { %>
        <tr class="player-id" id="<%= p._id %>">
          <td class="player-name"><%= p.name %></td>
          <td class="current-tag"><%= p.currentTag %></td>
          <td class="new-tag">
            <% if(event.newTags.find(x => x._id == p._id)) { %> <%=
            event.newTags.find(x => x._id == p._id).tag %> <% } else { %> - <% }
            %>
          </td>
          <td class="score-cell">
            <% if(event.scores.find(x => x.playerId == p._id)) { %> <%=
            event.scores.find(x => x.playerId == p._id).score %> <% } else { %>
            - <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <button id="btn process-event">Finish Match</button>
    <button id="btn export-tags">Export Tags</button>
    <a class="btn event-edit" href="/events/<%= event._id %>/edit">Edit</a>
    <form action="/events/<%= event._id %>?_method=DELETE" method="POST">
      <input type="submit" value="DELETE" />
    </form>
  </body>
</html>
